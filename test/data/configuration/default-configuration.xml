<templ-configuration>
    <TransportNetwork>
        <search>
            <options>
                <threads>1</threads>
                <cutoff>10</cutoff>
                <nogoods_limit>1024</nogoods_limit>
                <computation_distance>1</computation_distance>
                <adaptive_computation_distance>1</adaptive_computation_distance>
                <timeout_in_ms>600000</timeout_in_ms><!-- stop cutoff -->
                <model-usage>
                    <afc-decay>0.95</afc-decay>
                </model-usage>
                <role-usage>
                    <force-min>false</force-min><!-- enforce minimum role usage -->
                    <!-- todo: consider random upper bound -->
                    <afc-decay>0.95</afc-decay>
                </role-usage>
                <master-slave>true</master-slave><!-- allow to improve solution using a master-slave approach applying flaw resolvers -->
                <hill-climbing>true</hill-climbing><!-- allow only increasingly better solutions -->
            </options>
            <interactive>true</interactive>
        </search>
    </TransportNetwork>
</templ-configuration>
